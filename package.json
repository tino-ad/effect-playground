{
  "name": "effect-playground",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "start": "npm run -w example-app start",
    "build": "npm run -w @effect-playground/countdown build && npm run -w example-app build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsdown": "^1.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "prettier": "^3.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3"
  }
}